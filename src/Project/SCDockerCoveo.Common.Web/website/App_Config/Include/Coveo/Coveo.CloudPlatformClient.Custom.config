<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:coveo="http://www.sitecore.net/coveo/">
  <sitecore coveo:require="!disabled">
    <coveo>
	    <cloudPlatformConfiguration type="Coveo.Framework.Configuration.CloudPlatformConfiguration, Coveo.Framework">
		    <apiKey>COVEO_API_KEY</apiKey>
		    <indexingEndpointUri>COVEO_INDEXING_ENDPOINT_URI</indexingEndpointUri>
		    <organizationId>COVEO_ORGANIZATION_ID</organizationId>
		    <cloudPlatformUri>COVEO_CLOUD_PLATFORM_URI</cloudPlatformUri>
		    <searchApiKey>COVEO_SEARCH_API_KEY</searchApiKey>
	    </cloudPlatformConfiguration>
    </coveo>
  </sitecore>
</configuration>